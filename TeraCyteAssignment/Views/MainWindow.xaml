<Window x:Class="TeraCyteAssignment.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:TeraCyteAssignment.ViewModels"
        xmlns:converters="clr-namespace:TeraCyteAssignment.Converters"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type={x:Type viewModels:MainViewModel}, IsDesignTimeCreatable=True}"
        Title="TeraCyte Live Image Viewer" Height="850" Width="1400"
        WindowStartupLocation="CenterScreen"
        Background="#F0F0F0">
    <Window.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        <converters:HistogramBarsConverter x:Key="HistogramBarsConverter"/>

        <Style TargetType="{x:Type ScrollBar}">
            <Setter Property="Stylus.IsPressAndHoldEnabled" Value="false"/>
            <Setter Property="Stylus.IsFlicksEnabled" Value="false"/>
            <Setter Property="Foreground" Value="#ADADAD"/>
            <Setter Property="Width" Value="5"/>
            <Setter Property="MinWidth" Value="5"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}" Background="#AA000000" ZIndex="10">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Connecting to TeraCyte..." Foreground="White" FontSize="24" Margin="10"/>
                <Button Content="Connect" Command="{Binding LoginCommand}" Padding="20,10" FontSize="16" FontWeight="Bold" Cursor="Hand"/>
                <TextBlock Text="{Binding StatusMessage}" Foreground="White" FontSize="14" Margin="10" HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>
        <DockPanel Margin="15">
            <StatusBar DockPanel.Dock="Bottom" Background="#E0E0E0">
                <StatusBarItem>
                    <TextBlock Text="{Binding StatusMessage, FallbackValue='Ready'}" Padding="5"/>
                </StatusBarItem>
            </StatusBar>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.8*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="1.2*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Margin="0,0,15,0" Background="White" BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="5">
                    <DockPanel>
                        <TextBlock DockPanel.Dock="Top" Text="History" FontSize="18" FontWeight="Bold" Background="#F8F8F8" Padding="10" TextAlignment="Center"/>
                        <ListBox ItemsSource="{Binding History}"
                                 SelectedItem="{Binding SelectedHistoryItem, Mode=TwoWay}"
                                 HorizontalContentAlignment="Stretch"
                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="#DDDDDD" BorderThickness="0,0,0,1" Padding="5">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Image Source="{Binding Thumbnail}" Width="60" Height="60" Margin="5" Stretch="UniformToFill"/>
                                            <TextBlock Grid.Column="1" Text="{Binding ImageId}" VerticalAlignment="Center" Margin="10,0" TextWrapping="Wrap"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </DockPanel>
                </Border>

                <Border Grid.Column="1" Margin="0,0,15,0" Background="White" BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="5">
                    <Grid>
                        <TextBlock Text="Select an item from the history..." FontSize="20" Foreground="Gray" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="{Binding SelectedHistoryItem, Converter={StaticResource NullToVisibilityConverter}}"/>
                        <Image Source="{Binding SelectedHistoryItem.FullResolutionImage}" Stretch="Uniform"/>
                    </Grid>
                </Border>

                <Border Grid.Column="2" Background="White" BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="5">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" DataContext="{Binding SelectedHistoryItem}">
                        <StackPanel Margin="20">
                            <TextBlock Text="Inference Results" FontSize="22" FontWeight="Bold" Foreground="#333333" Margin="0,0,0,10"/>
                            <Separator/>
                            <Grid Margin="0,15,0,20">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Image ID:" FontWeight="SemiBold" Margin="0,5,15,5"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Data.ImageId, FallbackValue='N/A'}" VerticalAlignment="Center"/>
                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Classification:" FontWeight="SemiBold" Margin="0,5,15,5"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Data.ClassificationLabel, FallbackValue='N/A'}" VerticalAlignment="Center"/>
                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Focus Score:" FontWeight="SemiBold" Margin="0,5,15,5"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding Data.FocusScore, StringFormat={}{0:F2}, FallbackValue='N/A'}" VerticalAlignment="Center"/>
                                <TextBlock Grid.Row="3" Grid.Column="0" Text="Avg. Intensity:" FontWeight="SemiBold" Margin="0,5,15,5"/>
                                <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding Data.IntensityAverage, StringFormat={}{0:F1}, FallbackValue='N/A'}" VerticalAlignment="Center"/>
                            </Grid>
                            <TextBlock Text="Intensity Histogram" FontSize="18" FontWeight="SemiBold" Foreground="#333333" Margin="0,10,0,5"/>
                            <Border BorderBrush="#CCCCCC" BorderThickness="1" Height="100" VerticalAlignment="Bottom" Name="HistogramContainer">
                                <ItemsControl>
                                    <ItemsControl.ItemsSource>
                                        <MultiBinding Converter="{StaticResource HistogramBarsConverter}">
                                            <Binding Path="Data.Histogram"/>
                                            <Binding Path="ActualWidth" ElementName="HistogramContainer"/>
                                            <Binding Path="ActualHeight" ElementName="HistogramContainer"/>
                                        </MultiBinding>
                                    </ItemsControl.ItemsSource>
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <Canvas/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemContainerStyle>
                                        <Style TargetType="ContentPresenter">
                                            <Setter Property="Canvas.Bottom" Value="0"/>
                                            <Setter Property="Canvas.Left" Value="{Binding Left}"/>
                                        </Style>
                                    </ItemsControl.ItemContainerStyle>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Rectangle Fill="CornflowerBlue" Width="{Binding Width}" Height="{Binding Height}"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                </Border>
            </Grid>
        </DockPanel>
    </Grid>
</Window>
