<Window 
        x:Class="TeraCyteAssignment.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:TeraCyteAssignment.ViewModels"
        xmlns:converters="clr-namespace:TeraCyteAssignment.Converters"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance viewModels:MainViewModel, IsDesignTimeCreatable=True}"
        Title="TeraCyte Live Image Viewer" Height="800" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#F0F0F0">

    <Window.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
    </Window.Resources>
        
    <Grid>
        <Grid Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}" Background="#AA000000" ZIndex="10">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Connecting to TeraCyte..." Foreground="White" FontSize="24" Margin="10"/>
                <Button Content="Connect" Command="{Binding LoginCommand}" Padding="20,10" FontSize="16" FontWeight="Bold" Cursor="Hand"/>
                <TextBlock Text="{Binding StatusMessage}" Foreground="White" FontSize="14" Margin="10" HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>
        <DockPanel Margin="15">
            <StatusBar DockPanel.Dock="Bottom" Background="#E0E0E0">
                <StatusBarItem>
                    <TextBlock Text="{Binding StatusMessage, FallbackValue='Ready'}" Padding="5"/>
                </StatusBarItem>
            </StatusBar>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2.5*"/>
                    <ColumnDefinition Width="1.5*"/>
                </Grid.ColumnDefinitions>
                <Border Grid.Column="0" Margin="0,0,15,0" Background="White" BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="5">
                    <Grid>
                        <TextBlock Text="Waiting for image..." FontSize="20" Foreground="Gray" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="{Binding CurrentImage, Converter={StaticResource NullToVisibilityConverter}}"/>
                        <Image Source="{Binding CurrentImage}" Stretch="Uniform"/>
                    </Grid>
                </Border>
                <Border Grid.Column="1" Background="White" BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="5">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="20">
                            <TextBlock Text="Inference Results" FontSize="22" FontWeight="Bold" Foreground="#333333" Margin="0,0,0,10"/>
                            <Separator/>
                            <Grid Margin="0,15,0,20">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Image ID:" FontWeight="SemiBold" Margin="0,5,15,5"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding CurrentData.ImageId, FallbackValue='N/A'}" VerticalAlignment="Center"/>
                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Classification:" FontWeight="SemiBold" Margin="0,5,15,5"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding CurrentData.ClassificationLabel, FallbackValue='N/A'}" VerticalAlignment="Center"/>
                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Focus Score:" FontWeight="SemiBold" Margin="0,5,15,5"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding CurrentData.FocusScore, StringFormat={}{0:F2}, FallbackValue='N/A'}" VerticalAlignment="Center"/>
                                <TextBlock Grid.Row="3" Grid.Column="0" Text="Avg. Intensity:" FontWeight="SemiBold" Margin="0,5,15,5"/>
                                <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding CurrentData.IntensityAverage, StringFormat={}{0:F1}, FallbackValue='N/A'}" VerticalAlignment="Center"/>
                            </Grid>
                            <TextBlock Text="Intensity Histogram" FontSize="18" FontWeight="SemiBold" Foreground="#333333" Margin="0,10,0,5"/>
                            <!--<lvc:CartesianChart Series="{Binding HistogramSeries}" XAxes="{Binding XAxes}" Height="250" ZoomMode="None" LegendPosition="Bottom"/>-->
                        </StackPanel>
                    </ScrollViewer>
                </Border>
            </Grid>
        </DockPanel>
    </Grid>
</Window>
